{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jekyll Serve",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "/bin/sh",
            "runtimeArgs": [
                "-c",
                "jekyll serve --host 0.0.0.0 --watch"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/my-jekyll"
        }
    ]
}
